apiVersion: apps/v1
kind: Deployment
metadata:
  name: {{ project_name }}-app
  namespace: {{ namespace }}
spec:
  replicas: 2
  selector:
    matchLabels:
      app: {{ project_name }}
  template:
    metadata:
      labels:
        app: {{ project_name }}
    spec:
      containers:
        - name: apache
          image: {{ php_image }}
          ports:
            - containerPort: 80
          volumeMounts:
            - name: app-data
              mountPath: /var/www/html
      volumes:
        - name: app-data
          persistentVolumeClaim:
            claimName: {{ project_name }}-pvc
